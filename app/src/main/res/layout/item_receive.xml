<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="6dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/messageTextReceive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sent message"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:background="@drawable/item_receive"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:id="@+id/iconType"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:visibility="gone"
        android:layout_marginBottom="8dp"
        android:src="@drawable/ic_fb_laugh"
        app:layout_constraintBottom_toBottomOf="@+id/messageTextReceive"
        app:layout_constraintLeft_toRightOf="@+id/messageTextReceive"
        app:layout_constraintRight_toRightOf="@+id/messageTextReceive"
        app:layout_constraintTop_toTopOf="@+id/messageTextReceive"
        app:layout_constraintVertical_bias="1.0" />


</androidx.constraintlayout.widget.ConstraintLayout>